<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    xmlns:tools="http://schemas.android.com/tools"

    android:gravity="center_vertical"

    tools:context=".AddTripActivity">

    <ImageView

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:background="@drawable/atm"

        android:scaleType="fitCenter" />
    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:padding="20dp"

        android:layout_marginTop="20dp">
        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical">
            <ProgressBar

                android:id="@+id/login_progress"

                style="?android:attr/progressBarStyleHorizontal"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:indeterminate="true"

                android:visibility="invisible"/>
            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:layout_marginBottom="8dp"

                    android:text="Trip Details"

                    android:textColor="@color/colorBlack"

                    android:textSize="25sp"

                    android:textStyle="bold" />


                <EditText

                    android:id="@+id/Tripname"

                    android:layout_width="match_parent"

                    android:layout_height="45dp"

                    android:layout_marginBottom="10dp"

                    android:background="@drawable/edt_field_outline"

                    android:drawableRight="@drawable/ic_lock_outline_white_24dp"

                    android:hint="Trip Name"

                    android:inputType="text"

                    android:textColor="@color/colorBlack"

                    android:textColorHint="@color/colorBlack" />


                <EditText

                    android:id="@+id/AirlineName"

                    android:layout_width="match_parent"

                    android:layout_height="45dp"

                    android:layout_marginBottom="10dp"

                    android:background="@drawable/edt_field_outline"

                    android:drawableRight="@drawable/ic_lock_outline_white_24dp"

                    android:hint="Airline Name"

                    android:inputType="text"

                    android:textColor="@color/colorBlack"

                    android:textColorHint="@color/colorBlack" />



                <EditText

                    android:id="@+id/Tripfrom"

                    android:layout_width="match_parent"

                    android:layout_height="45dp"

                    android:layout_marginBottom="10dp"

                    android:background="@drawable/edt_field_outline"

                    android:drawableRight="@drawable/ic_lock_outline_white_24dp"

                    android:hint="Source Address"

                    android:inputType="text"

                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack" />

                <EditText

                    android:id="@+id/Tripto"

                    android:layout_width="match_parent"

                    android:layout_height="45dp"

                    android:layout_marginBottom="10dp"

                    android:background="@drawable/edt_field_outline"

                    android:drawableRight="@drawable/ic_lock_outline_white_24dp"

                    android:hint="Destination Address"

                    android:inputType="text"

                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack" />

                <EditText
                    android:id="@+id/Departuredate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Departure Date"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack" />

                <EditText
                    android:id="@+id/Arrivaldate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Arrival Date"
                    android:inputType="text"
                    android:textColorHint="@color/colorBlack" />


                <EditText

                    android:id="@+id/bags"

                    android:layout_width="match_parent"

                    android:layout_height="45dp"

                    android:layout_marginBottom="10dp"

                    android:background="@drawable/edt_field_outline"

                    android:drawableRight="@drawable/ic_email_white_24dp"

                    android:hint="Baggage Count"

                    android:inputType="text"

                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack" />
                <EditText

                    android:id="@+id/phone"

                    android:layout_width="match_parent"

                    android:layout_height="45dp"

                    android:layout_marginBottom="10dp"

                    android:background="@drawable/edt_field_outline"

                    android:drawableRight="@drawable/ic_email_white_24dp"

                    android:hint="Phone Number"

                    android:inputType="text"

                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack" />


                <ToggleButton
                    android:id="@+id/Insurance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/input_login_hint"
                    android:checked="false"
                    android:clickable="true"
                    android:text="ToggleButton"
                    android:textOff="No, my trip is not insured"
                    android:textOn="Yes, my trip is insured" />
            </LinearLayout>


            <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Next"
            android:translationY="5dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
